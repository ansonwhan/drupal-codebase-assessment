{%
  set classes = node.field_custom_classes.value is empty ? '' : node.field_custom_classes.value|split(' ')
%}
<article {{ attributes.addClass(classes).addClass('bio-profile bio-profile--teaser').setAttribute('id', node.field_custom_id.value) }}>
  <div class="half-content-people-tiles-with-buttons">
    <div class="container">
      <div class="row">
        <div class="card max-width-height common-border ods-mr-25 ods-mb-25 d-flex flex-wrap">
          <div class="col-md-6 col-lg-6 ods-p-0">
            {{ content.field_profile_image }}
          </div>
          <div class="col-12 col-md-6 col-lg-6 d-flex flex-wrap align-items-center">
            <div class="card-body">
              {% if(content.field_profile_heading) %}
                <h4 class="card-title ods-mt-15">{% spaceless %}
                {{ content.field_profile_heading }}
                {% endspaceless %}</h4>
              {% endif %}

              {% if(content.field_profile_subheading) %}
                <h6 class="card-subtitle text-uppercase">{% spaceless %}
                {{ content.field_profile_subheading }}
                {% endspaceless %}</h6>
              {% endif %}

              {% if(content.field_profile_intro) %}
                <p class="card-text">{% spaceless %}
                {{ content.field_profile_intro }}
                {% endspaceless %}</p>
              {% endif %}

              <div class="link-to-node ods-mb-15">
                <a class="btn btn-primary btn-rounded analytics--p-profile-content" data-analytics-id="{{ ('bio-btn-' ~ attributes['data-history-node-id'])|data_analytics_id }}" href="{{ url }}">View Profile</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
