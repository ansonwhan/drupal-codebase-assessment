{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * Available variables:
 * - paragraph: Full paragraph entity.
 *   Only method names starting with "get", "has", or "is" and a few common
 *   methods such as "id", "label", and "bundle" are available. For example:
 *   - paragraph.getCreatedTime() will return the paragraph creation timestamp.
 *   - paragraph.id(): The paragraph ID.
 *   - paragraph.bundle(): The type of the paragraph, for example, "image" or "text".
 *   - paragraph.getOwnerId(): The user ID of the paragraph author.
 *   See Drupal\paragraphs\Entity\Paragraph for a full list of public properties
 *   and methods for the paragraph object.
 * - content: All paragraph items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given child element.
 * - attributes: HTML attributes for the containing element.
 *   The attributes.class element may contain one or more of the following
 *   classes:
 *   - paragraphs: The current template type (also known as a "theming hook").
 *   - paragraphs--type-[type]: The current paragraphs type. For example, if the paragraph is an
 *     "Image" it would result in "paragraphs--type--image". Note that the machine
 *     name will often be in a short form of the human readable label.
 *   - paragraphs--view-mode--[view_mode]: The View Mode of the paragraph; for example, a
 *     preview would result in: "paragraphs--view-mode--preview", and
 *     default: "paragraphs--view-mode--default".
 * - view_mode: View mode; for example, "preview" or "full".
 * - logged_in: Flag for authenticated user status. Will be true when the
 *   current user is a logged-in member.
 * - is_admin: Flag for admin user status. Will be true when the current user
 *   is an administrator.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}


{% set color_scheme %}
  {{ content.field_banner_color_scheme|render|lower|trim }}
{% endset %}

{% set banner_type %}
  {{ content.field_banner_width_type|render|lower|trim }}
{% endset %}

{% set settings_custom_id = paragraph.getBehaviorSetting('custom_paragraph_behaviors_paragraph_custom_id_classes', 'custom_id') %}
{% set settings_custom_classes = paragraph.getBehaviorSetting('custom_paragraph_behaviors_paragraph_custom_id_classes', 'custom_classes') %}
{% set custom_id = settings_custom_id ? settings_custom_id : 'paragraph-' ~ paragraph.id() %}

{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  settings_custom_classes ? settings_custom_classes,
  'banner-scheme--' ~ color_scheme|clean_class,
  'banner-type--' ~ banner_type|clean_class,
] %}


{# extract media entity img properties #}
{% set image_url = file_url(content.field_banner_image[0]['#media'].field_media_image.entity.uri.value) %}
{% set image_alt = content.field_banner_image[0]['#media'].field_media_image.alt %}


{% if 'contained' in banner_type and 'clear' in color_scheme %}
  {{ attach_library('demo_design_system_theme/paragraph.hero-banner--a-spot-light') }}
  {% set mode = 'a-spot-hero-light' %}
{% elseif 'contained' in banner_type and 'charcoal' in color_scheme %}
  {{ attach_library('demo_design_system_theme/paragraph.hero-banner--a-spot-dark') }}
  {% set mode = 'a-spot-hero-dark' %}
{% else %}{# b-spot #}
  {{ attach_library('demo_design_system_theme/paragraph.hero-banner--b-spot') }}
  {% set mode = 'b-spot-hero' %}
{% endif %}

{% if mode == 'a-spot-hero-light' %}
  {# a-spot light theme settings#}
  {% set heroContainerClasses = '' %}
  {% set heroCol12Classes = 'p-0' %}
  {% set textColorClass = 'text-dark' %}
  {% set specialCssClasses = {
    backgroundDark: '',
    pageHeroImage: 'page-hero-img',
    borderLeft: '',
    borderRight: '',
    displayLgNone: 'display-lg-none',
    displayXsNone: 'display-xs-none',
    marginLeft: '',
  } %}
  {% set imgInsideBannerProperties = {
    pageHeroImageAlt: '',
    alternativeText: image_alt,
  } %}

{% elseif mode == 'a-spot-hero-dark' %}
  {# a-spot dark theme settings #}
  {% set textColorClass = 'text-white' %}
  {% set heroContainerClasses = '' %}
  {% set heroCol12Classes = '' %}

  {% set specialCssClasses = {
    backgroundDark: 'background-dark',
    pageHeroImage: '',
    borderLeft: '',
    borderRight: '',
    displayLgNone: '',
    displayXsNone: '',
    marginLeft: '',
  } %}
  {% set imgInsideBannerProperties = {
    pageHeroImageAlt: image_alt,
    alternativeText: '',
  } %}

{% else %}
  {# alt mode if b-spot #}
  {% set heroContainerClasses = '' %}
  {% set heroCol12Classes = '' %}
  {% set textColorClass = 'text-white' %}
  {% set specialCssClasses = {
    backgroundDark: '',
    pageHeroImage: '',
    borderLeft: '',
    borderRight: '',
    displayLgNone: '',
    displayXsNone: '',
    marginLeft: '',
  } %}
  {% set imgInsideBannerProperties = {
    pageHeroImageAlt: image_alt,
    alternativeText: '',
  } %}
{% endif %}

{% set headlineMarkup %}
  {{ content.field_banner_headline }}
{% endset %}

{% set buttonAttributesAriaLabel = content.field_banner_link.0['#url'].options.attributes['aria-label'] %}

{% block paragraph %}
  <div id="layout-no-isi-sidebar"
       class="{{ mode == 'a-spot-hero-light' ? 'layout-a-spot-hero-light-theme ods-mb-15' : '' }}">
    <div
            data-id="heroMode" {{ attributes.addClass(classes).addClass(mode).setAttribute('id', custom_id) }}>
      {% block content %}
        <div data-id="heroContainer"
             class="container custom--hero-spot {{ heroContainerClasses }}"
             data-analytics-position="Hero Spot"
        >
          <div class="row">
            <div data-id="heroCol12" class="col-12  hero-fullbleed-wrapper {{ heroCol12Classes }}">
              <div class="card">
                <div class="carousel card-block">
                  <div class="slide-wrapper">

                    {% if mode == 'a-spot-hero-light' %}

                      <div class="card-img-top"></div>
                    <div
                      class="jumbotron position-absolute {{ textColorClass }} text-left jumbotron-container">
                      <div class="row">
                      <div
                        class="col-xs-12 col-sm-5 col-md-5 col-lg-5 col-xl-5 jumbotron-img-container {{ specialCssClasses.displayLgNone }}">
                        <div
                                role="img"
                                aria-label="{{- imgInsideBannerProperties.alternativeText -}}"
                                title="{{- imgInsideBannerProperties.alternativeText -}}"
                                class="{{ specialCssClasses.pageHeroImage }}"
                                style="background-image: url('{{- image_url -}}');"></div>
                      </div>

                      <div data-id="content-wrapper"
                           class="col-xs-12 col-sm-7 col-md-7 col-lg-6 col-xl-6 px-2 banner-text-container">
                        <h1 class="{{ textColorClass }}">{{- headlineMarkup|striptags('<sup><sub><i><em>')|trim|raw -}}</h1>
                        <div class="first-paragraph">{{- content.field_blurb|raw -}}</div>
                        {% if content.field_banner_link|render|trim|length > 0 %}
                          <p>
                            <a class="text-uppercase btn btn-primary btn-sm btn-rounded p-2 analytics--p-cta ods-mt-25"
                               href="{{ content.field_banner_link.0['#url'] }}"
                               role="button"
                               tabindex="0"
                               data-analytics-id="{{ ('hero-banner-link-' ~ content.field_banner_link.0['#url']|render|trim ~ content.field_banner_link.0['#title']|render|trim ~ paragraph.id())|data_analytics_id }}"
                                {{ buttonAttributesAriaLabel ? ('aria-label="' ~ buttonAttributesAriaLabel ~ '"')|raw }}
                            >
                              {{- content.field_banner_link.0['#title'] -}}
                            </a>
                          </p>
                        {% endif %}
                      </div>

                      <div
                        class="col-xs-12 col-sm-5 col-md-5 col-lg-5 col-xl-5 jumbotron-img-container {{ specialCssClasses.displayXsNone }}">
                        <div
                          role="img"
                          aria-label="{{- imgInsideBannerProperties.alternativeText -}}"
                          title="{{- imgInsideBannerProperties.alternativeText -}}"
                          class="{{ specialCssClasses.pageHeroImage }}"
                          style="background-image: url('{{- image_url -}}');"></div>
                      </div>
                      </div>{# /.row #}
                      </div>{# /.jumbotron-container #}

                    {% elseif mode == 'a-spot-hero-dark' %}

                      <img alt="" src="{{- image_url -}}" class="card-img-top"/>
                      <div
                        class="jumbotron position-absolute {{ textColorClass }} text-left jumbotron-container">
                        <h1
                          class="{{ textColorClass }}">{{- headlineMarkup|striptags('<sup><sub><i><em>')|trim|raw -}}</h1>
                        <div class="first-paragraph">{{- content.field_blurb|raw -}}</div>
                        {% if content.field_banner_link|render|trim|length > 0 %}
                          <p>
                            <a class="text-uppercase btn btn-primary btn-sm btn-rounded p-2"
                               href="{{ content.field_banner_link.0['#url'] }}" role="button"
                               tabindex="0"
                                {{ buttonAttributesAriaLabel ? ('aria-label="' ~ buttonAttributesAriaLabel ~ '"')|raw }}
                            >
                              {{- content.field_banner_link.0['#title'] -}}
                            </a>
                          </p>
                        {% endif %}
                      </div>

                    {% else %}{# b-spot-hero #}

                      <div class="card-img-top"></div>
                      <div
                        class="jumbotron position-absolute {{ textColorClass }} text-left jumbotron-container">
                        <div class="row">
                          <div class="col-7 ods-col-xs-7 ods-col-sm-7 ods-col-6 px-2 pt-5 text-container">
                            <h1
                                    class="{{ textColorClass }}">{{- headlineMarkup|striptags('<sup><sub><i><em>')|trim|raw -}}</h1>
                            <div class="first-paragraph">{{- content.field_blurb|raw -}}</div>
                          </div>
                          <div
                                  class="col-5 ods-col-xs-5 ods-col-sm-5 ods-col-6 jumbotron-img-container">
                            <div
                                    role="img"
                                    aria-label="{{ imgInsideBannerProperties.alternativeText }}"
                              title="{{ imgInsideBannerProperties.pageHeroImageAlt }}"
                              class="doctor-hero"
                              style="background-image: url('{{- image_url -}}');"></div>
                          </div>
                        </div>
                      </div>

                    {% endif %}
                  </div>{# /.slide-wrapper #}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endblock %}
    </div>
  </div>
{% endblock paragraph %}
