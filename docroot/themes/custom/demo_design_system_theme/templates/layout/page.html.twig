{% set content_class = page.sidebar_right ? 'col-md-8' : 'col-12' %}

{% if page.html_head %}
    {{ page.html_head }}
{% endif %}

{% block container %}
    <div class="page-container" id="page-container">
        {# Header #}
        {% include '@demo_design_system_theme/layout/header.html.twig' %}

        <main role="main" id="main-content" data-analytics-position="Body">
            {% if page.content_top %}
                {{ page.content_top }}
            {% endif %}
            <div class="container">
                {% if page.highlighted %}
                    {{ page.highlighted }}
                {% endif %}
                <div class="row">
                    <div class="{{ content_class }}">
                        {{ page.content }}
                    </div>
                    {% if page.sidebar_right %}
                        <div class="col-md-4 custom--sidebar-right">
                            {{ page.sidebar_right }}
                        </div>
                    {% endif %}
                </div>
            </div>
            {% if page.content_bottom %}
                {{ page.content_bottom }}
            {% endif %}
        </main>

    </div>
{% endblock %}

{# Footer #}
{% include '@demo_design_system_theme/layout/footer.html.twig' %}

{% if page.html_deferred %}
    {{ page.html_deferred }}
{% endif %}
