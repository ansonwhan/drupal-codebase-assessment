{{ attach_library('demo_design_system_theme/component.modal') }}

<div class="modal fade" tabindex="-1" role="dialog" id="{{ modalID }}" aria-labelledby="{{ modalLabelID }}" style="display:none;">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="{{ modalLabelID }}">Modal title</h5>
        <button type="button" class="close analytics--o-exit-close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="{{ modalBodyID }}">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <a role="button" href="#" class="btn btn-secondary analytics--o-exit-close" data-analytics-id="{{ ('close-' ~ modalCloseButtonID)|data_analytics_id }}" data-dismiss="modal" id="{{ modalCloseButtonID }}">Close</a>
        <a role="button" href="#" class="btn btn-primary analytics--e-link" data-analytics-id="{{ ('open-' ~ modalContinueButtonID)|data_analytics_id }}" id="{{ modalContinueButtonID }}">Continue</a>
      </div>
    </div>
  </div>
</div>
