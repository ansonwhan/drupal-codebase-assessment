{#
/**
 * @file
 * Default theme implementation for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 *
 * @ingroup themeable
 */
#}
{{ attach_library('demo_design_system_theme/component.pagination') }}

{% if items.previous or items.next %}
  <nav class="mini-pager d-flex justify-content-center" role="navigation" aria-labelledby="{{ heading_id }}">
    <ul class="pagination js-pager__items">
      {% if items.previous %}
        <li class="page-item">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel').addClass('page-link analytics--p-pagination-prev') }} data-analytics-id="{{ (heading_id ~ '-prev')|data_analytics_id }}" >
            <span aria-hidden="true">{{ items.previous.text|default('‹‹'|t) }}</span>
          </a>
        </li>
      {% endif %}
      {% if items.current %}
        <li class="page-item active">
          {% trans %}
            <span class="page-link">
              Page {{ items.current }}
            </span>
          {% endtrans %}
        </li>
      {% endif %}
      {% if items.next %}
        <li class="page-item">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel').addClass('page-link analytics--p-pagination-next') }} data-analytics-id="{{ (heading_id ~ '-next')|data_analytics_id }}">
            <span aria-hidden="true">{{ items.next.text|default('››'|t) }}</span>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
