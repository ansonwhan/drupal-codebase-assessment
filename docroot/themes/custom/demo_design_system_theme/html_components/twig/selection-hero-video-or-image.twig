{% extends "./_base.twig" %}
{% block title %}
  A spot hero carousel
{% endblock %}
{% block head %}
    <link rel="stylesheet" media="all"
          href="{{ basePath }}css/component/carousels/selection-hero-video-or-image.css"/>

    <!-- SLICK carousel  CSS and JS -->
    <link rel="stylesheet" media="all"
          href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css"/>
    <script
            src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.js"></script>
    <script
            src="{{ basePath }}js/component/carousels/a-spot-hero-carousel.js"></script>
    <!-- End SLICK carousel  CSS and JS -->

    <!-- Bootstrap-select  CSS and JS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta/dist/css/bootstrap-select.min.css">
    <script
            src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta/dist/js/bootstrap-select.min.js"></script>
    <!-- End Bootstrap-select  CSS and JS -->

{% endblock %}

 {% block header %}
   {% include './partial/_page-header-fpo.twig' %}
 {% endblock %}

{% block content %}
  <div class="notes">
    <h1>Selection hero video or image (Combined video and img carousel)</h1>
    <h2 style="color: red;">Please notice it may be necessary to add library (slick.js) on the
      CMS
      side. <br><br>
      This component is using bootstrap-select library (dedicated js and scss) it may be necessary
      to add this library on the CMS side <br>Manual:
      <a target="_blank"
         href="https://developer.snapappointments.com/bootstrap-select/examples/#dropup-menu">https://developer.snapappointments.com/bootstrap-select/examples/#dropup-menu</a>
      <br><br>
    </h2>
  </div>
  <div style="margin-bottom: 40px" class="example">
    {% include './partial/_selection-hero-video-or-image.twig' %}
    {% if item.notes %}
      <div style="margin-bottom: 20px" class="notes">
        <h3>Selection hero video or image</h3>
        {{ item.notes }}
      </div>
    {% endif %}
  </div>
{% endblock %}
