<!-- start example code for Drupal -->
{% for item in individualCtaRow %}
  <div class="{{ item.class }} {{ internalGridClasses.odsMarginAuto }}">
    <div class="card-body d-flex flex-wrap align-items-center">
      <div class="img-container col-4 col-sm-2">
        <!-- At the moment img src is defined in the scss stylesheet  -->
        <div role="img"
             aria-label="{{ item.alternativeText }}"
             title="{{ item.alternativeText }}" class="treva-icon">
        </div>
      </div>
      <div class="col-12 col-sm-6 ods-mt-15">
        <div class="card-title">
          <h4>{{ item.heading }}</h4>
        </div>
        <div class="card-text">
          <p>{{ item.text }}</p>
        </div>
      </div>
      <div class="button-container col-12 col-sm-4">
        <a
                class="text-uppercase btn btn-primary btn-sm btn-rounded float-lg-right float-md-right float-sm-right">
          {{ item.buttonText }}
        </a>
      </div>
    </div>
  </div>
{% endfor %}
<!-- end example code for Drupal -->
