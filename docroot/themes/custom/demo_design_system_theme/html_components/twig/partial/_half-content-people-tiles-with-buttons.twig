{% set singleComponentMode = true %}

        {% if singleComponentMode != true %}
          <!-- start example code for Drupal -->
          <h3>1. Basic version of <i><strong>half-content-people-tiles-with-buttons</strong></i>
            component: </h3>

          <div class="half-content-people-tiles-with-buttons">
            <div class="container">
              <div class="row {{ internalGridClasses.odsFlexCenter }}">
                {% for item in halfContentPeopleTilesWithButtons %}
                  <div
                          class="card max-width-height common-border ods-mr-25 ods-mb-25 d-flex flex-wrap">
                    <div class="col-md-6 col-lg-6 ods-p-0">
                      <div role="img"
                           aria-label="{{ item.alternativeText }}"
                           title="{{ item.alternativeText }}"
                           class="photo{{ item.imgSrcClass }}"></div>
                    </div>
                    <div
                            class="col-12 col-md-6 col-lg-6 d-flex flex-wrap align-items-center">
                      <div class="card-body">
                        <div class="card-title ods-mt-15">
                          <h4>{{ item.heading }}</h4>
                        </div>
                        <div class="card-subtitle text-uppercase">
                          <h6>{{ item.subHeading }}</h6>
                        </div>
                        <div class="card-text">
                          <p>
                            {{ item.text }}
                          </p>
                        </div>
                        <a
                                class="btn btn-primary btn-sm btn-rounded mt-auto text-uppercase ods-mb-25"
                                href="#"
                                target="_blank"
                                role="button"
                                tabindex="0"
                        >
                          {{ item.buttonText }}
                        </a>
                      </div>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>

          <br>
          <br>

          <h3 class="ods-mb-30">2. <strong><i>half-content-people-tiles-with-buttons</i></strong>
            component with dedicated conditions for another component - <i><strong>people-profile-card</strong></i>
            : </h3>
        {% endif %}

<div class="half-content-people-tiles-with-buttons">
  <div class="container-fluid">
    <div class="row {{ internalGridClasses.odsFlexCenter }}">
      {% for item in halfContentPeopleTilesWithButtons %}
        {% if loop.first %}
          <div
            class="card {{ item.isMaxSizeClass ? "max-width-height" : "" }} {{ item.isCommonBorderClass ? "common-border" : "" }} d-flex flex-wrap">
            <div class="col-md-6 col-lg-6 ods-p-0">
              <div role="img"
                   aria-label="{{ item.alternativeText }}"
                   title="{{ item.alternativeText }}"
                   class="photo{{ item.imgSrcClass }}"></div>
            </div>
            <div
                    class="col-12 col-md-6 col-lg-6 d-flex flex-wrap align-items-center">
              <div
                      class="card-body">
                <div class="card-title ods-mt-15">
                  <h4>{{ item.heading }}</h4>
                </div>
                <div class="card-subtitle text-uppercase">
                  <h6>{{ item.subHeading }}</h6>
                </div>
                <div class="card-text">
                  <p>
                    {{ item.text }}
                  </p>
                </div>

                {% if loop.first %}
                  <button class="btn btn-primary btn-rounded">
                    <i class="fa fa-play" aria-hidden="true"></i>
                    {{ item.buttonText }}
                  </button>
                {% else %}
                  <a
                          class="btn btn-primary btn-sm btn-rounded mt-auto text-uppercase ods-mb-25"
                          href="#"
                    target="_blank"
                    role="button"
                    tabindex="0"
                  >
                    {{ item.buttonText }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>


<!-- end example code for Drupal -->

