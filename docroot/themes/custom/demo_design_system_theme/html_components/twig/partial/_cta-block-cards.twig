<!-- start example code for Drupal -->
<div class="cta-block-cards container">
  <div class="row">
    {% for item in ctaBlockCards %}
      <div
              class="col-12 col-sm-6 col-md-6 col-lg-4 {{ loop.last ? '' : 'ods-mr-25' }}  ods-mb-25 common-border max-width-height">
        <div class="card height-100">
          <div
                  class="card-body d-flex flex-wrap align-items-center justify-content-center text-center height-100">
            <div class="ods-mt-25 col-12">
              <div role="img"
                   aria-label="{{ item.alternativeText }}"
                   title="{{ item.alternativeText }}"
                   class="{{ item.imgSrcClass }} d-block mx-auto"></div>
            </div>
            <div class="card-title ods-mt-15">
              <h4>{{ item.heading }}</h4>
            </div>
            <div>
              <p class="card-text">{{ item.text }}</p>
            </div>
            <a role="button" tabindex="0" href="#"
               class="text-uppercase btn btn-primary btn-sm btn-rounded mt-auto ods-mb-25">{{ item.buttonText }}</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
<!-- end example code for Drupal -->



