{% set setPathToImg = pathsToDependencies.isDockerLocalHost ? "/themes/custom/otsk-sandboxes/themes/custom/demo_design_system_theme/assets/build/webp/" : "/themes/custom/demo_design_system_theme/assets/build/webp/" %}

<div class="p-4">
  <h3>Component specification <strong>Type a-spot-hero-carousel (basic type)</strong>:</h3>
  <ul class="h3">
    <li>autoplay: <strong>true</strong></li>
    <li>navigation buttons: <strong>true</strong></li>
    <li>number of slides: <strong>3</strong></li>
    <li>focusOnSelect: <strong>true</strong></li>
    <li>isTextBanner: <strong>true</strong></li>
  </ul>
</div>

<div class="a-spot-hero-carousel">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="carousel card-block">
            {% for item in aSpotHeroCarousel %}
              <div class="slide-wrapper">
                <img alt="{{ item.alt }}" src="{{ setPathToImg }}{{ item.imgName }}"
                     class="card-img-top"/>
                <div
                        class="jumbotron position-absolute text-white text-center jumbotron-container">
                  <h1 class="text-white">{{ item.heading }}</h1>
                  <p class="first-paragraph">{{ item.text }}</p>
                  <p>
                    <a class="text-uppercase btn btn-primary btn-sm btn-rounded ods-p-10"
                       href="#" role="button" tabindex="0">{{ item.buttonText }}</a>
                  </p>
                </div>
              </div>
            {% endfor %}
          </div>

          <!-- Please notice this condition is for single slide (a-spot-hero component) -->
          {% if aSpotHeroCarousel.length > 1 %}
            <div class="carousel-nav card-block indicators position-absolute">
              <div class="rectangle__one" role="button" tabindex="0"></div>
              <div class="rectangle__two" role="button" tabindex="0"></div>
              <div class="rectangle__three" role="button" tabindex="0"></div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

