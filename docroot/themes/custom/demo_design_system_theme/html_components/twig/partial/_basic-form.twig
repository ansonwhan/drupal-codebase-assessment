{% set jsValidation = basicForm.jsSelectors.jsValidationClass %}

  {% set textInput = basicForm.textInput %}
  {% set textArea  = basicForm.textArea %}
  {% set select    = basicForm.select %}
  {% set radio     = basicForm.radioInput %}
  {% set checkbox  = basicForm.checkBoxInput %}
  {% set password  = basicForm.passwordInput %}
  {% set basicFileInput   = basicForm.basicFileInput %}
  {% set customFileInput  = basicForm.customFileInput %}
  {% set buttonsTypes     = basicForm.buttonsTypes %}

  {% set modifiers        = basicForm.nativeBootstrapModifiers %}

<!-- Modifiers: Change the key of inputSize object and boolean value, to apply changes in whole form -->
{% set sizeClass = false ? modifiers.inputSize['formControlSm'] : '' %}
  {% set validationClass = false ? modifiers.inputValidation['isValid'] : '' %}
  {% set positioningClass = true ? modifiers.inputPositioning['inline'] : '' %}

  {% set spacingClassMl3 = true ? modifiers.inputSpacing['ml3'] : '' %}
  {% set spacingClassMl4 = true ? modifiers.inputSpacing['ml4'] : '' %}
  {% set spacingClassMl5 = true ? modifiers.inputSpacing['ml5'] : '' %}
  {% set spacingClassMlMd4 = true ? modifiers.inputSpacing['mlMd4'] : '' %}
  {% set spacingClassMlLg4 = true ? modifiers.inputSpacing['mlLg4'] : '' %}
  {% set spacingClassMt3 = true ? modifiers.inputSpacing['mt3'] : '' %}

  {% set spacingClassPr5 = true ? modifiers.inputSpacing['pr5'] : '' %}
  {% set spacingClassPl3 = true ? modifiers.inputSpacing['pl3'] : '' %}

<div class="basic-form">
  <h1 id="form_elements">{{ basicForm.headingText }}</h1>

  <p>{{ basicForm.paragraphText }}</p>

  <form>
    <div class="row px-5">
      <div class="col-6">

        <div class="form-group">
          <label for="{{ textInput.forLabel }}">{{ textInput.labelText }}</label>
          <input
            class="form-control {{ sizeClass }} {{ validationClass }}"
            placeholder="{{ textInput.placeholder }}"
            id="{{ textInput.id }}"
            type="text"
            aria-describedby="{{ textInput.ariaTextField }}">
          <small id="{{ textInput.ariaTextField }}"
                 class="form-text text-muted">
            {{ textInput.ariaDescribedbyText }}
          </small>
        </div>


        <div class="form-group">
          <label for="{{ textArea.forLabel }}">{{ textArea.labelText }}</label>
          <textarea class="{{ sizeClass }} {{ validationClass }}" id="{{ textArea.id }}"
                    rows="{{ textArea.rows }}"></textarea>
        </div>


        <div class="form-group">
          <label for="{{ select.forLabel }}">{{ select.labelText }}</label>
          <select class="form-control {{ sizeClass }} {{ validationClass }}"
                  id="{{ select.id }}">
            <optgroup label="{{ select.optgroupLabel1 }}">
              <option value="1">Option 1</option>
              <option value="2">Option 2</option>
              <option value="3">Option 3</option>
            </optgroup>
            <optgroup label="{{ select.optgroupLabel2 }}">
              <option value="1">Option 1</option>
              <option value="2">Option 2</option>
              <option value="3">Option 3</option>
            </optgroup>
          </select>
        </div>


        <div class="form-group">
          <div class="form-check">
            <input
              class="form-check-input {{ validationClass }}"
              type="radio"
              name="{{ radio.name1 }}"
              id="{{ radio.id1 }}"
              value="option1"
              {{ radio.isChecked ? 'checked' : '' }}
            >
            <label class="form-check-label" for="{{ radio.forLabel1 }}">
              {{ radio.labelText1 }}
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input {{ validationClass }}"
              type="radio"
              name="{{ radio.name2 }}"
              id="{{ radio.id2 }}"
              value="option2">
            <label class="form-check-label" for="{{ radio.forLabel2 }}">
              {{ radio.labelText2 }}
            </label>
          </div>
          <div class="form-check {{ radio.isDisabled ? 'disabled' : '' }}">
            <input
              class="form-check-input {{ validationClass }}"
              type="radio"
              name="{{ radio.name3 }}"
              id="{{ radio.id3 }}"
              value="option3"
              {{ radio.isDisabled ? 'disabled' : '' }}
            >
            <label class="form-check-label" for="{{ radio.forLabel3 }}">
              {{ radio.labelText3 }}
            </label>
          </div>
        </div>


        <div class="form-group">
          <div class="form-check">
            <input
              class="form-check-input {{ validationClass }}"
              type="checkbox"
              value=""
              id="{{ checkbox.id1 }}"
              {{ checkbox.isChecked ? 'checked' : '' }}
            >
            <label class="form-check-label"
                   for="{{ checkbox.forLabel1 }}"
            >
              {{ checkbox.labelText1 }}
            </label>
          </div>
          <div class="form-check">
            <input
              class="form-check-input {{ validationClass }}"
              type="checkbox"
              value=""
              id="{{ checkbox.id2 }}"
              {{ checkbox.isDisabled ? 'disabled' : '' }}
            >
            <label
              class="form-check-label"
              for="{{ checkbox.forLabel2 }}">
              {{ checkbox.labelText2 }}
            </label>
          </div>
        </div>


        <div class="form-group">
          <div class="{{ positioningClass }}">
            <div class="form-group">
              <label for="{{ password.forLabel }}">{{ password.labelText }}</label>
              <input
                type="password"
                id="{{ password.id }}"
                class="form-control {{ sizeClass }} {{ validationClass }} {{ spacingClassMl3 }}"
                aria-describedby="{{ password.ariaDescribedbyId }}"
                {{ password.isRequired ? 'required' : '' }}
                minlength="{{ password.minLength }}"
                maxlength="{{ password.maxLength }}"
                pattern="{{ password.isValidationPattern ? password.validationPattern : '' }}"
              >
              <small id="passwordHelpInline" class="text-muted {{ spacingClassMl3 }}">
                {{ password.ariaDescribedbyText }}
              </small>
            </div>
          </div>
        </div>


        <div class="form-group">
          <label for="{{ basicFileInput.forLabel }}">{{ basicFileInput.labelText }}</label>
          <input
            type="file"
            class="form-control-file {{ sizeClass }} {{ validationClass }}"
            id="{{ basicFileInput.exampleFormControlFile1 }}">
        </div>

        <div class="form-group">
          <div class="custom-file">
            <input
              type="file"
              class="custom-file-input {{ validationClass }}"
              id="{{ customFileInput.id }}">
            <label class="custom-file-label"
                   for="{{ customFileInput.forLabel }}">
              {{ customFileInput.labelText }}
            </label>
          </div>
        </div>

        <button type="{{ buttonsTypes.type1 }}"
                class="btn btn-primary ods-mt-10">{{ buttonsTypes.buttonName1 }}</button>
        <button type="{{ buttonsTypes.type2 }}"
                class="btn btn-primary ods-mt-10">{{ buttonsTypes.buttonName2 }}</button>
        <!-- This button resets value of inputs in form -->
        <button type="{{ buttonsTypes.type3 }}"
                class="btn btn-primary ods-mt-10">{{ buttonsTypes.buttonName3 }}</button>

      </div>
    </div>
  </form>
</div>


<hr class="ods-mt-25">
<h1 id="form_elements">Forms components variations:</h1>

<br>
<br>

<h2>1. Inline checkboxes/radio:</h2>
<div class="form-group">
  <div class="{{ positioningClass }}">
    <div class="form-check {{ spacingClassMl3 }}">
      <input
        class="form-check-input {{ validationClass }}"
        type="checkbox"
        value=""
        id="{{ checkbox.id1 }}"
        {{ checkbox.isChecked ? 'checked' : '' }}
      >
      <label class="form-check-label"
             for="{{ checkbox.forLabel1 }}"
      >
        {{ checkbox.labelText1 }}
      </label>
    </div>
    <div class="form-check {{ spacingClassMl3 }}">
      <input
        class="form-check-input {{ validationClass }}"
        type="radio"
        name="{{ radio.name2 }}"
        id="{{ radio.id2 }}"
        value="option2">
      <label
        class="form-check-label"
        for="{{ radio.forLabel2 }}">
        {{ radio.labelText2 }}
      </label>
    </div>
  </div>
</div>

<br>
<br>

<h2>2. Two columns checkboxes/radios:</h2>
<div class="form-group two-checkbox-columns">
  <div class="container">
    <div class="row">
      <h5 class="{{ spacingClassPr5 }}">U.S. Resident?</h5>
      <div class="col-xs-12 col-sm-2 col-md-1">
        <div class="form-check {{ spacingClassMl3 }} {{ spacingClassMt3 }}">
          <input
            class="form-check-input {{ validationClass }}"
            type="checkbox"
            value=""
            id="{{ checkbox.id1 }}"
            {{ checkbox.isChecked ? 'checked' : '' }}
          >
          <label class="form-check-label {{ spacingClassPl3 }}"
                 for="{{ checkbox.forLabel1 }}"
          >
            Yes
          </label>
        </div>
        <div class="form-check {{ spacingClassMl3 }} {{ spacingClassMt3 }}">
          <input
            class="form-check-input {{ validationClass }}"
            type="checkbox"
            value=""
            id="{{ checkbox.id1 }}"
            {{ checkbox.isChecked ? 'checked' : '' }}
          >
          <label class="form-check-label {{ spacingClassPl3 }}"
                 for="{{ checkbox.forLabel1 }}"
          >
            Sure
          </label>
        </div>
      </div>

      <div class="col-xs-12 col-sm-2 col-md-1 {{ spacingClassMlMd4 }} {{ spacingClassMlLg4 }}">
        <div class="form-check {{ spacingClassMl3 }} {{ spacingClassMt3 }}">
          <input
            class="form-check-input {{ validationClass }}"
            type="radio"
            name="{{ radio.name2 }}"
            id="{{ radio.id2 }}"
            value="option2">
          <label
            class="form-check-label {{ spacingClassPl3 }}"
            for="{{ radio.forLabel2 }}">
            No
          </label>
        </div>

        <div class="form-check {{ spacingClassMl3 }} {{ spacingClassMt3 }}">
          <input
            class="form-check-input {{ validationClass }}"
            type="radio"
            name="{{ radio.name2 }}"
            id="{{ radio.id2 }}"
            value="option2">
          <label
            class="form-check-label {{ spacingClassPl3 }}"
            for="{{ radio.forLabel2 }}">
            Maybe
          </label>
        </div>

      </div>
    </div>
  </div>
</div>

<br>
<br>

<h2>3. Two columns select:</h2>
<div class="form-group">
  <div class="{{ positioningClass }}">
    <label for="{{ select.forLabel }}">{{ select.labelText }}</label>
    <select class="form-control {{ sizeClass }} {{ validationClass }} {{ spacingClassMl5 }}"
            id="{{ select.id }}">
      <option value="1">Option 1</option>
    </select>
    <select class="form-control {{ sizeClass }} {{ validationClass }} {{ spacingClassMl5 }}"
            id="{{ select.id }}">
      <option value="1">Option 1</option>
    </select>
  </div>
</div>


<br>
<br>

<h2>4. Radio inputs with text input:</h2>
<div class="form-group radio-inputs-with-text-input">
  <div class="form-group">
    <div class="">
      <h5 class="{{ spacingClassPr5 }}">One ring to rule them all, please choose yours:</h5>
      <h6 class="{{ spacingClassPr5 }} text-danger">This component have JS validation for "other"
        text input</h6>
      <div class="form-check {{ spacingClassMl3 }} {{ spacingClassMt3 }}">
        <input
          class="form-check-input {{ validationClass }}"
          type="radio"
          name="goodRadio"
          value=""
          id="{{ checkbox.id1 }}"
          {{ checkbox.isChecked ? 'checked' : '' }}
        >
        <label class="form-check-label {{ spacingClassPl3 }}"
               for="{{ checkbox.forLabel1 }}"
        >
          One Ring
        </label>
      </div>

      <div class="form-check {{ spacingClassMl3 }} {{ spacingClassMt3 }}">
        <input
          class="form-check-input {{ validationClass }}"
          type="radio"
          name="goodRadio"
          value=""
          id="{{ checkbox.id2 }}"
          {{ checkbox.isChecked ? 'checked' : '' }}
        >
        <label class="form-check-label {{ spacingClassPl3 }}"
               for="{{ checkbox.forLabel2 }}"
        >
          The rest one
        </label>
      </div>

      <div class="{{ spacingClassMt3 }} {{ positioningClass }}">
        <input
          class="form-check-input {{ validationClass }} {{ jsValidation }}"
          type="radio"
          name="goodRadio"
          value=""
          id="{{ checkbox.id3 }}"
          {{ checkbox.isChecked ? 'checked' : '' }}>
        <label class="control-label" for="{{ checkbox.forLabel3 }}"> Other:
        </label>
        <input
          type="text"
          class="form-check-input {{ validationClass }}"
          value=""
        >

      </div>

    </div>
  </div>
</div>
